%h1
  Device Settings
%h2
  Device Registration
= form_tag devices_register_path, :method => :put do
  = label_tag 'secret', 'Device secret code'
  = text_field_tag 'secret'
  = label_tag 'name', 'Your personal device name'
  = text_field_tag 'name'
  = submit_tag "Register your device"
%h2
  Device List
= form_tag devices_delete_path, :method => :delete do
  <!-- list of devices is currently listed under -->
  = User.find_by_id(current_user.id).devices.to_json