%h1
  Device Settings
%h2
  Device Registration
= form_tag devices_register_path, :method => :put do
  = label_tag 'secret', 'Device secret code'
  = text_field_tag 'secret'
  = label_tag 'name', 'Your personal device name'
  = text_field_tag 'name'
  = submit_tag "Register your device"
%h2
  Device List
= form_tag devices_delete_path, :method => :delete, :id => "device_form" do
  = select("device", "id", current_user.devices.collect {|d| [ d.name, d.id ] })
  = submit_tag "Delete selected device"